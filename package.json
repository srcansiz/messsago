{
  "name": "@messago/messago",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/server",
    "packages/example"
  ],
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "clean": "rm -rf ./node_modules && rm -rf package-lock.json",
    "start": "lerna run start --scope={server}",
    "compile-serer:watch": "nodemon --exec lerna run compile:watch --watch packages",
    "start-example:watch":  "nodemon --exec lerna run dev --scope=@messago/example --watch packages",
    "dev-server": "concurrently \"npm run compile-serer:watch\" \"npm run start-example:watch\""
  },
  "devDependencies": {
    "@types/node": "^17.0.7",
    "@types/ws": "^8.2.2",
    "concurrently": "^7.3.0",
    "lerna": "^5.5.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1"
  }
}
